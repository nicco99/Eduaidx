<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="dashboard, EduAidx, admin panel">
    <meta name="description" content="Admin dashboard for EduAidx management">
    <title>EduAidx - Dashboard</title>

    <!-- Favicon -->
    <link rel="icon" href="img/eduaidx-logo.jpg">

    <!-- Bootstrap Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- Custom Stylesheet -->
    <link rel="stylesheet" href="css/style.css">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f5f6fa;
        }

        .sidebar {
            min-height: 100vh;
            background-color: #4e4c6d;
            padding: 20px;
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            transition: transform 0.3s ease;
        }

        .sidebar a {
            color: #ffffff;
            text-decoration: none;
            margin: 10px 0;
            display: block;
            padding: 12px;
            border-radius: 5px;
        }

        .sidebar a.active {
            background-color: #34495E;
        }

        .sidebar a:hover {
            background-color: #34495E;
        }

        .content {
            margin-left: 250px;
            padding: 30px;
            transition: margin-left 0.3s ease;
        }

        .btn-toggle-sidebar {
            background-color: #34495E;
            color: white;
            border: none;
            padding: 10px;
            font-size: 18px;
            border-radius: 50px;
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 999;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card h5 {
            color: #34495E;
        }

        .card h2 {
            color: #6c757d;
        }

        .btn-custom {
            background-color: #4e4c6d;
            color: white;
            border-radius: 30px;
            padding: 8px 20px;
        }

        .btn-custom:hover {
            background-color: #565379;
        }

        @media (max-width: 768px) {
            .content {
                margin-left: 0;
            }

            .sidebar {
                transform: translateX(-100%);
                position: absolute;
                z-index: 1000;
            }

            .sidebar.show {
                transform: translateX(0);
            }

            .btn-toggle-sidebar {
                left: 10px;
                top: 10px;
                z-index: 1001;
            }
        }
    </style>
</head>

<body>

    <!-- Sidebar Toggle Button -->
    <button class="btn-toggle-sidebar d-lg-none"><i class="fas fa-bars"></i></button>

    <!-- Sidebar -->
    <div class="col-lg-2 sidebar">
        <div class="container-fluid text-center mb-4">
            <img class="rounded shadow img-fluid" src="img/eduaidx-logo.jpg" alt="EduAidx Logo" style="width: 120px;">
        </div>

        <!-- Dynamic Sidebar Links -->
        <a href="/dashboard" class="<%= currentPage === 'dashboard' ? 'active' : '' %>"><i class="fas fa-home"></i> Dashboard</a>
        <a href="/orders" class="<%= currentPage === 'orders' ? 'active' : '' %>"><i class="fas fa-file-alt"></i> Orders</a>
        <a href="/writers" class="<%= currentPage === 'writers' ? 'active' : '' %>"><i class="fas fa-users"></i> Writers</a>
        <a href="/payments" class="<%= currentPage === 'payments' ? 'active' : '' %>"><i class="fas fa-money-bill-wave"></i> Payments</a>
        <a href="/profile" class="<%= currentPage === 'profile' ? 'active' : '' %>"><i class="fas fa-money-bill-wave"></i> Profile</a>

    </div>

    <!-- Content -->
    <div class="col-lg-10 content">
        <div class="container-fluid">
            <!-- Dashboard Header -->
            <div class="row align-items-center mb-4">
                <div class="col">
                    <h1 class="h3">EduAidx Dashboard</h1>
                    <p class="text-muted">Welcome, <strong class="text-capitalize"><%= user.fullnames %></strong>!</p>
                </div>
                <div class="col text-end">
                    <button class="btn btn-custom"><i class="fas fa-cog"></i> Settings</button>
                </div>
            </div>

            <!-- Dashboard Stats -->
            <div class="row g-4">
                <div class="col-md-6 col-lg-3">
                    <div class="card p-4 text-center">
                        <h5>Total Orders</h5>
                        <h2 id="total-orders"><%= totalOrders %></h2>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card p-4 text-center">
                        <h5>Active Writers</h5>
                        <h2 id="active-writers">45</h2>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card p-4 text-center">
                        <h5>Pending Payments</h5>
                        <h2 id="pending-payments">$5,200</h2>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card p-4 text-center">
                        <h5>Completed Orders</h5>
                        <h2 id="completed-orders">280</h2>
                    </div>
                </div>
            </div>

            <!-- Description Section -->
            <div class="row mt-4">
                <div class="col">
                    <div class="alert alert-info">
                        <h5>How to Add an Order:</h5>
                        <p>To place a new order, navigate to the <strong>Orders</strong> section from the sidebar. Click on <strong>New Order</strong> and fill out the necessary details including your requirements and deadlines. Ensure to provide accurate information to help our writers serve you better.</p>
                        <p>We understand that your work is important to you. Trust us with your assignments, and we will ensure you receive high-quality work tailored to your needs. Your success is our priority!</p>
                    </div>
                </div>
            </div>

            <!-- Recent Activities -->
            <div class="row g-4 mt-4">
                <!-- Add additional components like tables or recent activities here -->
            </div>
        </div>
    </div>

    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelector('.btn-toggle-sidebar').addEventListener('click', function () {
            document.querySelector('.sidebar').classList.toggle('show');
        });
    </script>
</body>

</html>
